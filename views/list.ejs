<!DOCTYPE html>
<html lang="en">

<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for(var item of items){ %>

            <div class="item">
                <input type="checkbox">
                <p>
                    <%= item %>
                </p>
            </div>
            <% } %>

            <form class="item" action="/" method="post">
                <input type="text" name="newTask" placeholder="New Task" autocomplete="off">
                <button type="submit" name="list" value= <%= listTitle %> >+</button>
            </form>
    </div>

</body>
 
<%- include("footer") -%>

</html>